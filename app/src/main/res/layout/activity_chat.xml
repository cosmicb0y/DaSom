<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.databinding.ObservableArrayList" />

        <import type="com.example.dasom.model.ChatModel" />

        <variable
            name="activity"
            type="com.example.dasom.ChatActivity" />

        <variable
            name="items"
            type="ObservableArrayList&lt;ChatModel&gt;" />

        <variable
            name="isListening"
            type="Boolean" />

        <variable
            name="isResult"
            type="Boolean" />

        <variable
            name="question"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80323232">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="@{!isListening}"
                app:chatItem="@{items}"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/row_chat_send" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_box"
                android:backgroundTint="@color/materialGray1"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:gravity="center"
                android:padding="16dp"
                android:text="지금 점심으로 매콤크림파스타 먹고 있어"
                android:textColor="@color/materialGray7"
                android:textSize="18sp"
                android:visibility="@{!isListening&amp;&amp;isResult}"
                app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView4" />

            <ImageView
                android:onClick="@{()->isResult?activity.sendMessage():activity.startListening()}"
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="4dp"
                android:padding="16dp"
                android:src="@{isResult?@drawable/ic_baseline_check_24:@drawable/ic_baseline_mic_24, default=@drawable/ic_baseline_mic_24}"
                android:visibility="@{!isListening}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/materialGray1"
                android:elevation="4dp"
                android:padding="16dp"
                android:src="@drawable/ic_baseline_photo_camera_24"
                android:visibility="@{!isListening&amp;&amp;isResult}"
                app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
                app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/materialGray1"
                android:elevation="4dp"
                android:padding="16dp"
                android:src="@drawable/ic_baseline_refresh_24"
                android:visibility="@{!isListening&amp;&amp;isResult}"
                app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_chat_listening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/apple_sd_gothic_neo_h"
                android:text="듣고 있습니다..."
                android:textColor="@color/materialGray7"
                android:textSize="20sp"
                android:visibility="@{isListening, default=gone}"
                app:layout_constraintBottom_toTopOf="@+id/lottieAnimationView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />


            <com.airbnb.lottie.LottieAnimationView
                android:onClick="@{()->activity.stopListening()}"
                android:id="@+id/lottieAnimationView"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="16dp"
                android:visibility="@{isListening, default=gone}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_chat_listening"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wave" />

            <ImageView
                android:visibility="@{isListening, default=gone}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_mic_24"
                android:translationZ="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView"
                app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
                app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
                app:layout_constraintTop_toTopOf="@+id/lottieAnimationView"
                app:tint="@android:color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
